# Usar una imagen base de Python optimizada para producci贸n
FROM python:3.11-slim

# Establecer variables de entorno para optimizaci贸n
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV DJANGO_SETTINGS_MODULE=dental_erp.settings
ENV PYTHONPATH=/app

# Establecer directorio de trabajo
WORKDIR /app

# Instalar dependencias del sistema necesarias
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        postgresql-client \
        build-essential \
        libpq-dev \
        wget \
        curl \
        gettext \
    && rm -rf /var/lib/apt/lists/*

# Copiar requirements y instalar dependencias de Python
COPY requirements.txt /app/
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt \
    && pip install gunicorn

# Crear usuario no privilegiado
RUN adduser --disabled-password --gecos '' appuser

# Copiar el c贸digo de la aplicaci贸n
COPY . /app/

# Crear directorios necesarios y ajustar permisos
RUN mkdir -p /app/staticfiles /app/media /app/logs \
    && chown -R appuser:appuser /app

# Copiar script wait-for-db
COPY wait-for-db.sh /app/wait-for-db.sh
RUN chmod +x /app/wait-for-db.sh

# Cambiar al usuario no privilegiado
USER appuser

# Exponer el puerto
EXPOSE 8000

# Comando por defecto
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "--workers", "3", "--timeout", "60", "dental_erp.wsgi:application"]
